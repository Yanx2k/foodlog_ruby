<p style="color: green"><%= notice %></p>

<%= content_for :title do%>
  <%= @entry.meal_type %> &ndash; <%= DateTime.now.strftime("%B %d, %Y") %>

<% end %>
<div class="columns mt-6 is-centered">
  <div>
    <%= render @entry %>
  </div>

  <div>
    <%= link_to "Edit this entry", edit_entry_path(@entry) %> |
    <%= link_to "Back to entries", entries_path %>

    <%= button_to "Destroy this entry", @entry, method: :delete, data: { confirm: "Are you sure ?"}, class: "button is-gray" %>
  </div>
  <div class="column">
</div>