<p style="color: green"><%= notice %></p>

<% content_for :title do %>
  Foodlog &ndash; <%= DateTime.now.strftime("%B %d, %Y") %>
<% end %>

<div class = "columns mt-6 is-centered"> </div>
  <div id="entries">
    <% @entries.each do |entry| %>
    <div class ="column is-one-quarter">
      <div class="card">
        <header class="card-header"> 
          <p class= "card-header-title"><%= entry.meal_type %></p>
        </header>
        <div class="card-content">
          <div class="content">
            <p><span class ="has-text-weight-bold"><%= entry.calories%></span> calories</p>
            <p><span class ="has-text-weight-bold"><%= entry.proteins%></span> grams of proteins</p>
            <p><span class ="has-text-weight-bold"><%= entry.carbs%></span> grams of carbs</p>
            <p><span class ="has-text-weight-bold"><%= entry.fats%></span> grams of fat</p>
            <p class="italic"> Logged <%= time_ago_in_words(entry.created_at) %> ago</p>
          </div>
        </div>
        <div class ="card-footer">
          <%= link_to 'Show', entry, class: "card-footer-item"%>
          <%= link_to 'Edit', edit_entry_path(entry), class: "card-footer-item" %>
          <%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?'}, class: "card-footer-item" %>
        </div>
      </div>
    </div>
    <% end %>
    
  </div>

  <%= link_to "New entry", new_entry_path %>
</div>

<div class = "columns is-centered mt-6">
  <%=  link_to "View all entries", archives_index_path, class: "button is-link is-outlines is-centered" %>
</div>